{
  "name": "es6_boilerplate",
  "description": "Boilerplate with nice presets",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=6.8.0"
  },
  "main": "server/server.js",
  "scripts": {
    "build-client": "babel-node ./node_modules/webpack/bin/webpack --config webpack.dev.config",
    "watch-client": "babel-node ./node_modules/webpack/bin/webpack --watch --config webpack.dev.config",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint --config .eslintrc .",
    "start": "concurrently --raw \"nodemon --exec 'npm run lint && babel-node ./server/app.js'\" \"npm run watch-client\" ",
    "test": "export NODE_ENV=test && jest",
    "test:client": "export NODE_ENV=test && jest client",
    "test:server": "export NODE_ENV=test && jest server"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "body-parser": "^1.15.2",
    "concurrently": "^3.1.0",
    "express": "^4.14.0",
    "express-winston": "^2.0.0",
    "request": "^2.76.0",
    "request-promise": "^4.1.1",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "babel-register": "^6.16.3",
    "css-loader": "^0.25.0",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-flowtype": "^2.25.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.4.1",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.34.0",
    "flow-typed": "^2.0.0",
    "jest": "^16.0.1",
    "json-loader": "^0.5.4",
    "nock": "^9.0.2",
    "nodemon": "^1.11.0",
    "standard": "^8.4.0",
    "standard-react": "^4.0.0",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.3.1",
    "supertest": "^2.0.1",
    "svg-url-loader": "^1.1.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2"
  }
}